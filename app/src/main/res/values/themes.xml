<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DarkActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!--App Fonts Styles-->
    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.Text.Black" parent="TextStyle">
        <item name="fontPath">fonts/gotham/gothamblack.ttf</item>
        <item name="android:fontFamily">@font/gothamblack</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="TextStyle">
        <item name="fontPath">fonts/gotham/gothambold.ttf</item>
        <item name="android:fontFamily">@font/gothambold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Text.Book" parent="TextStyle">
        <item name="fontPath">fonts/gotham/gothambook.ttf</item>
        <item name="android:fontFamily">@font/gothambook</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="TextStyle">
        <item name="fontPath">fonts/gotham/gothamlight.ttf</item>
        <item name="android:fontFamily">@font/gothamlight</item>
    </style>

    <style name="TextAppearance.Text.Medium" parent="TextStyle">
        <item name="fontPath">fonts/gotham/gothammedium.ttf</item>
        <item name="android:fontFamily">@font/gothammedium</item>
    </style>
    //borderless Button
    <style name="Button_borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Medium</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Theme.githubRepo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>